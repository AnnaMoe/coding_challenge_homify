<div class="container">
  <div class="row">
    <div class="col-12">
      <h1><%= @campaign.title %></h1>
      <p><%= @campaign.tags %></p>
    </div>
  </div>


  <div class="row">
    <div class="col-6">
    <h2>To Do's</h2>
    <% @campaign.todos.each do |todo| %>
      <div><%= todo.name %></div>
    <% end %>
     

    </div>
    <div class="col-6">
      <%= render "todo" %>
    </div>
  </div>

  <%= link_to 'Back', campaigns_path %>
</div>